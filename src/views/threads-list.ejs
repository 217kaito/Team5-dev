<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thread List</title>
  </head>
  <body>
    <h1>Thread List</h1>
    <a href="/logout">ログアウト</a>
    <a href="/threads"> back to thread list</a>
    <ul>
      <% threads.forEach(thread => { %>
      <li><a href="/threads/<%= thread.id %>"><%= thread.title %></a></li>
      <% }); %>
    </ul>
    <form action="/threads/create" method="post">
      <label for="threadTitle">New Thread Title:</label>
      <input type="text" id="threadTitle" name="threadTitle" required />
      <button type="submit">Create New Thread</button>
    </form>
  </body>
</html>
