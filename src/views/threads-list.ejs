<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>スレッド一覧</title>
    <link rel="stylesheet" type="text/css" href="/threads-list.css" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container" style="margin-bottom: 20px">
      <div class="container1">
        <h1 class="mt-5" style="color: silver">スレッド一覧</h1>
        <div class="logout">
          <a href="/logout">ログアウト</a>
        </div>
        <ul class="list-group">
          <% threads.forEach(thread => { %>
          <li class="list-group-item">
            <a href="/threads/<%= thread.id %>"><%= thread.title %></a>
            <span class="badge bg-secondary" style="float: right"
              ><%= thread.category %></span
            >
          </li>
          <% }); %>
        </ul>
      </div>
      <div class="container2">
        <form class="mt-3" action="/threads/create" method="post">
          <label
            for="threadTitle"
            class="form-label"
            style="color: silver; font-weight: bold"
            >スレッドのタイトル:</label
          >
          <input
            type="text"
            id="threadTitle"
            name="threadTitle"
            class="form-control"
            required
          />

          <!-- 新しい要素: カテゴリの選択用ボタン -->
          <div class="btn-group">
            <button
              id="category-button"
              type="button"
              class="btn btn-secondary dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              カテゴリを選択
            </button>
            <div class="dropdown-menu">
              <button
                class="dropdown-item"
                type="button"
                onclick="selectCategory('連絡事項')"
              >
                連絡事項
              </button>
              <button
                class="dropdown-item"
                type="button"
                onclick="selectCategory('引継ぎ事項')"
              >
                引継ぎ事項
              </button>
              <button
                class="dropdown-item"
                type="button"
                onclick="selectCategory('雑談')"
              >
                雑談
              </button>
            </div>
          </div>

          <input type="hidden" id="threadCategory" name="threadCategory" />

          <button type="submit" class="btn btn-primary mt-2">
            スレッドの作成
          </button>
        </form>
      </div>
    </div>

    <!-- Bootstrap JS (Popper.js and Bootstrap JS) -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>

    <script>
      // カテゴリを選択したときにフォームにセットする関数
      function selectCategory(category) {
        document.getElementById("threadCategory").value = category;
        document.getElementById("category-button").innerText = category;
      }
    </script>
  </body>
</html>
