<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thread List</title>
    <link rel="stylesheet" type="text/css" href="../public/threads-list.css" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="mt-5">Thread List</h1>
      <ul class="list-group">
        <% threads.forEach(thread => { %>
        <li class="list-group-item">
          <a href="/threads/<%= thread.id %>"><%= thread.title %></a>
        </li>
        <% }); %>
      </ul>
      <form class="mt-3" action="/threads/create" method="post">
        <label for="threadTitle" class="form-label">New Thread Title:</label>
        <input
          type="text"
          id="threadTitle"
          name="threadTitle"
          class="form-control"
          required
        />
        <button type="submit" class="btn btn-primary mt-2">
          Create New Thread
        </button>
      </form>
    </div>

    <!-- Bootstrap JS (Popper.js and Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
