<!doctype html>
<html lang="ja">
  <head>
    <!-- Meta tags and title remain unchanged -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thread View</title>
    <script>
      function sortReplies() {
        const repliesList = document.getElementById("repliesList");
        const replies = Array.from(repliesList.children);

        replies.sort((a, b) => {
          const idA = parseInt(a.dataset.replyId);
          const idB = parseInt(b.dataset.replyId);
          return idA - idB;
        });

        replies.forEach((reply) => repliesList.appendChild(reply));
      }
    </script>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Bootstrap Icons CSS (v1.11.2) via CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/thread-view.css" />

    <!-- 中央揃えのためのカスタムスタイル -->
    <style>
      body {
        display: flex;
        min-height: 100vh;
        align-items: start;
        justify-content: center;
        margin: 0;
      }

      .container {
        max-width: 800px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="thread-info">
        <h1><%= thread.title %></h1>
        <h3><%= thread.content %></h3>
        <p><strong>カテゴリ:</strong> <%= thread.category %></p>
      </div>
      <div class="logout">
        <a href="/logout">ログアウト</a>
      </div>
      <div class="setting">
        <a href="/threads/setting">設定</a>
      </div>
      <a href="/threads">スレッド一覧に戻る</a>
      <ul>
        <% posts.forEach(post => { %>
        <li class="list1">
          <div class="message-icon">
            <i class="bi bi-file-person"></i>
          </div>
          <div class="message-content">
            <%= post.user.username %> : <%=
            post.createdAt.toLocaleString("ja-JP", { weekday: "long", year:
            "numeric", month: "2-digit", day: "2-digit", hour: "2-digit",
            minute: "2-digit" }) %>
          </div>
        </li>
        <li class="list2">
          <div><%= post.content %></div>
          <% if(post.user.id === userid) { %>
          <div>
            <form
              action="/threads/<%= thread.id %>/post/<%= post.id %>?_method=delete"
              method="post"
            >
              <button type="submit">delete</button>
            </form>
          </div>
          <% } %>
          <button
            class="navigation-button"
            id="showFormButton-<%= post.id %>"
            onclick="showFormButton(<%= post.id %>)"
          >
            reply
          </button>
          <!-- 以下、返信フォーム -->
          <div
            class="form-container"
            id="inputForm-<%= post.id %>"
            style="display: none"
          >
            <label for="replycontent">New Post:</label>
            <form
              action="/threads/<%= thread.id %>/post/<%= post.id %>"
              method="post"
            >
              <textarea
                id="replycontent"
                name="replycontent"
                rows="4"
                cols="50"
              ></textarea>
              <br />
              <button type="submit">Post</button>
            </form>
            <button
              type="submit"
              class="navigation-button"
              id="closeFormButton-<%= post.id %>"
              onclick="closeFormButton(<%= post.id %>)"
            >
              close
            </button>
          </div>
        </li>
        <% if (post.replies && post.replies.length > 0) { %>
        <ul id="repliesList">
          <% post.replies.forEach(reply => { %>
          <li data-reply-id="<%= reply.id %>">
            <div class="message-icon">
              <i class="bi bi-file-person"></i>
            </div>
            <div class="message-content">
              <%= reply.user.username %> : <%=
              reply.createdAt.toLocaleString("ja-JP", { weekday: "long",
              year:"numeric", month: "2-digit", day: "2-digit", hour:
              "2-digit",minute: "2-digit" }) %>
            </div>
            <div><%= reply.content %></div>
            <% if(reply.user.id === userid) { %>
            <div>
              <form
                action="/threads/<%= thread.id %>/reply/<%= reply.id %>?_method=delete"
                method="post"
              >
                <button type="submit">delete</button>
              </form>
            </div>
            <% } %> <% }); %>
          </li>
        </ul>
        <script>
          sortReplies();
        </script>
        <% } %> <% }); %>
      </ul>
      <label for="content">新規投稿:</label>
      <form action="/threads/<%= threadId %>/post" method="post">
        <textarea id="content" name="content" rows="4" cols="50"></textarea>
        <br />
        <button type="submit">投稿</button>
      </form>
    </div>
    <script>
      showFormButton = async (id) => {
        // ボタン要素と入力フォーム要素を取得
        const showFormButton = await document.getElementById(
          `showFormButton-${id}`,
        );
        const inputForm = await document.getElementById(`inputForm-${id}`);

        // ボタンがクリックされたときの処理
        await showFormButton.addEventListener("click", () => {
          // 入力フォームを表示
          inputForm.style.display = "block";
        });
      };
      closeFormButton = async (id) => {
        // ボタン要素と入力フォーム要素を取得
        const closeFormButton = await document.getElementById(
          `closeFormButton-${id}`,
        );
        const inputForm = await document.getElementById(`inputForm-${id}`);

        // ボタンがクリックされたときの処理
        await closeFormButton.addEventListener("click", () => {
          // 入力フォームを表示
          inputForm.style.display = "none";
        });
      };
    </script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
