<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thread View</title>
  </head>
  <body>
    <h1>Thread View</h1>
    <a href="/threads"> back to thread list</a>
    <ul>
      <% posts.forEach(post => { %>
      <li>        
        <%= post.content %> - <%= post.ip %> -
        投稿日時: <%= post.createdAt %> 
      </li>
      <% }); %>
    </ul>
    <!-- Add a form to allow users to post new messages to this thread -->
    <form action="/thread/<%= threadId %>/post" method="post">
      <label for="content">New Post:</label>
      <textarea id="content" name="content" rows="4" cols="50"></textarea>
      <br />
      <button type="submit">Post</button>
    </form>
  </body>
</html>
