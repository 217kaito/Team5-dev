{
  "name": "team5-board",
  "version": "1.0.0",
  "description": "team5 chat board app",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean build:* copy",
    "build:server": "esbuild --bundle --platform=node --outdir=dist --minify src/index.js",
    "clean": "rimraf dist",
    "copy": "npm-run-all copy:*",
    "copy:public": "cpr --filter=.+\\.js$ src/public dist/public",
    "copy:views": "cpr src/views dist/views",
    "fix": "npm-run-all fix:*",
    "fix:prettier": "prettier --write .",
    "fix:prettier-ejs": "prettier --write --parser html src/views/**/*.ejs",
    "lint": "npm-run-all --continue-on-error lint:*",
    "lint:eslint": "eslint src/**/*.js",
    "lint:markuplint": "markuplint src/**/*.html src/**/*.ejs",
    "lint:prettier": "prettier --check .",
    "lint:prettier-ejs": "prettier --check --parser html src/views/**/*.ejs",
    "lint:stylelint": "stylelint src/**/*.css",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "ejs": "^3.1.9",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.1",
    "method-override": "^3.0.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.3.3",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@markuplint/ejs-parser": "^3.11.0",
    "cpr": "^3.0.1",
    "esbuild": "^0.19.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "markuplint": "^3.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.1.0"
  }
}
